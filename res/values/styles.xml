<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        
        <!--Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
             -->       
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Main theme colors -->  
    	<!--   your app branding color for the app bar -->  
    	<item name="android:colorPrimary">@color/primary</item>  
    	<!--   darker variant for the status bar and contextual app bars -->  
   		<item name="android:colorPrimaryDark">@color/primary_dark</item>
   		<!--  text color  -->
   		<item name="android:textColorPrimary">@color/text_primary</item> 
   		<!--  background color 
   		<item name="android:windowBackground">@color/window_background</item>  -->
    	<!--   theme UI controls like checkboxes and text fields -->  
    	<item name="android:colorAccent">@color/accent</item>  
    </style>
    
        <style name="AppTheme.NoTitle" parent="android:Theme.Material.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Main theme colors -->  
    	<!--   your app branding color for the app bar -->  
    	<item name="android:colorPrimary">@color/primary</item>  
    	<!--   darker variant for the status bar and contextual app bars -->  
   		<item name="android:colorPrimaryDark">@color/primary_dark</item>
   		<!--  text color  -->
   		<item name="android:textColorPrimary">@color/text_primary</item> 
   		<!--  background color 
   		<item name="android:windowBackground">@color/window_background</item>  -->
    	<!--   theme UI controls like checkboxes and text fields -->  
    	<item name="android:colorAccent">@color/accent</item>  
    </style>
    
    <style name="PlaylistTheme" parent="android:Theme.Material.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Main theme colors -->  
    	<!--   your app branding color for the app bar -->  
    	<item name="android:colorPrimary">@color/playlist_primary</item>  
    	<!--   darker variant for the status bar and contextual app bars -->  
   		<item name="android:colorPrimaryDark">@color/playlist_primary_dark</item>
   		<!--  text color  -->
   		<item name="android:textColorPrimary">@color/text_primary</item> 
   		<!--  background color 
   		<item name="android:windowBackground">@color/window_background</item>  -->
    	<!--   theme UI controls like checkboxes and text fields -->  
    	<item name="android:colorAccent">@color/accent</item>  
    </style>

</resources>
